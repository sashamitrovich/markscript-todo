{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "rootDir": "./src",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": ".",
        "moduleResolution": "node"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "compileOnSave": true,
    "filesGlob": [
        "build.d.ts",
        "src/**/*.ts",
        "typings/**/*.d.ts",
        "node_modules/*/build.d.ts",
        "node_modules/marklogic-typescript-definitions/ts/index.d.ts",
        "node_modules/marklogic-node-typescript-definitions/ts/index.d.ts"
    ],
    "files": [
        "build.d.ts",
        "src/lib/buildPlugin.ts",
        "src/lib/decorators.ts",
        "src/lib/index.ts",
        "src/lib/modelGenerator.ts",
        "src/lib/runtime.ts",
        "typings/glob/glob.d.ts",
        "typings/minimatch/minimatch.d.ts",
        "typings/node/node.d.ts",
        "typings/promise/promise.d.ts",
        "typings/tsd.d.ts",
        "node_modules/markscript-core/build.d.ts",
        "node_modules/marklogic-typescript-definitions/ts/index.d.ts",
        "node_modules/marklogic-node-typescript-definitions/ts/index.d.ts"
    ],
    "exclude": []
}
