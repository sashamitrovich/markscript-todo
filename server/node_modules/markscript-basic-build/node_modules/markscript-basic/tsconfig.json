{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "rootDir": "./src",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": ".",
        "moduleResolution": "classic"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "compileOnSave": true,
    "filesGlob": [
        "src/**/*.ts",
        "typings/**/*.d.ts",
        "node_modules/markscript-core/model.d.ts",
        "node_modules/marklogic-typescript-definitions/ts/index.d.ts"
    ],
    "files": [
        "src/lib/decorators.ts",
        "src/lib/extension.ts",
        "src/lib/index.ts",
        "src/lib/utils.ts",
        "typings/require/require.d.ts",
        "node_modules/markscript-core/model.d.ts"
    ],
    "exclude": []
}
